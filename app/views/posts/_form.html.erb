<%= form_with(model: [@topic , post], local:false, id: 'new_post') do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: 'post-title' %>
  </div>

  <div class="field">
    <%= form.label :post %>
    <%= form.text_area :description, id:'post-desp' %>
  </div>

  <div class="field">
    <%= form.hidden_field :author_name, value: current_user.email %>
  </div>

  <div class="field">
    <%= form.hidden_field :topic_id, value: @topic.id , id: "topic_id"%>
  </div>

  <div>
    <%= form.label :tag %>
    <%= form.text_field :name, value:post.tags.map(&:name).join(", ")%>
  </div>

  <% if @post.image.attached? %>
    <image src = "<%= url_for(@post.image) %>"></image>
  <%end %>
  <%= form.label "Update Image"%>
  <%= form.file_field :image%><br>


  <div class="actions">
    <%= form.submit %>
  </div>

  <%#= button_to 'Create' , topic_posts_path(@topic), id: 'new_post_req' %>


<% end %>

<script>
  window.addEventListener('load' , () =>{

      var new_post_req = document.getElementById('new_post_req');

      new_post_req.addEventListener('click' , () => {

          var post_title = document.getElementById('post-title').value;
          var post_desp = document.getElementById('post-desp').value;
          let data = {title: post_title, description: post_desp };
          var token = document.querySelector('meta[name="csrf-token"]').content
          var topic_id = document.getElementById('topic_id').value;

          var xhr = new XMLHttpRequest();
          xhr.responseType = "text";

          xhr.onreadystatechange = function()
          {
              console.log(xhr);
              if(xhr.readyState === 4){
                if(xhr.status === 200){
                    alert(xhr.responseText);
                    alert("Post created!!!");
                }
                else{
                    alert(xhr.status);
                }
              }
          }

          xhr.open('POST',`/topics/${topic_id}/posts/` ,true);
          xhr.setRequestHeader('Content-Type','application/json');
          xhr.setRequestHeader('Data-Type','script');
          xhr.setRequestHeader('X-CSRF-Token',token);
          xhr.send(JSON.stringify(data));

      });
  });
</script>
