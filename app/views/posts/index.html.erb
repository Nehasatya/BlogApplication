<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<table>
  <thead>
  <tr>
    <th>Posts</th>
    <th>Average Rating</th>
    <th>Comments Count</th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, topic_post_path(@topic, post) %></td>
      <td><%= post.ratings.average(:stars).truncate(1) %></td>
      <td><%= post.ratings.count(:stars) %></td>
      <% if params.has_key?(:topic_id) %>
      <td><%= link_to 'Edit', edit_topic_post_path(@topic, post) %></td>
      <td><%= link_to 'Destroy', [@topic, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end%>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<div>
  <%= will_paginate @posts, :container => false %>
</div>

<% if params.has_key?(:topic_id) %>
<%= link_to 'New Post', new_topic_post_path %>
<%end %>
<%= link_to 'Back To Topic' , topics_path %>