<body>
<h1 class="head">Topics</h1>

<table class = "table table-dark table-borderless table-stripped-columns align-middle table-hover table-responsive">
  <thead>
    <tr>
      <th>Topic Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr class = "table-light">
        <td><%= link_to topic.title, topic_posts_path(topic) %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path, class: 'btn' %>
<%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn' %>

</body>