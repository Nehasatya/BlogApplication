<body>

<p id="notice"><%= notice %></p>

<h1 class="head">Topics</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <button class= "btn"><%= link_to topic.title, "topics/#{topic.id}/posts" %></button>
        <button class= "btn" ><%= link_to 'Edit', edit_topic_path(topic) %></button>
        <button class= "btn"><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
</body>