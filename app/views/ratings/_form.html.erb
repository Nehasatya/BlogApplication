  <%= form.radio_button(:stars, 3)%> <%= form.label(:rating.to_s + "_3", "Ok") %>
  <%= form.radio_button :stars, 2%> <%= form.label(:rating.to_s + "_2", "Below Expected") %>
  <%= form.radio_button :stars, 1 %> <%= form.label(:rating.to_s + "_1", "Unsatisfied") %>
</fieldset>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
